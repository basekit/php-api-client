<?xml version="1.0"?>
<ruleset name="Custom Standard">
    <description>A custom coding standard</description>

    <rule ref="PSR2"/>

    <!-- The OAuth library we use (and extend) uses underscores in methods. For shame. -->
    <rule ref="Generic.NamingConventions.CamelCapsFunctionName">
        <exclude-pattern>library/BaseKit/OAuthDataStore.php</exclude-pattern>
        <exclude-pattern>library/BaseKit/OAuthServer.php</exclude-pattern>
        <exclude-pattern>library/BaseKit/MockOAuthDataStore.php</exclude-pattern>
    </rule>

    <!-- As these classes extend Zend Framework 1 classes, we have to use _ prefixed properties :( -->
    <rule ref="PSR2.Classes.PropertyDeclaration.Underscore">
        <exclude-pattern>library/BaseKit/Application/Resource/*.php</exclude-pattern>
        <exclude-pattern>library/BaseKit/Resource/Container.php</exclude-pattern>
        <exclude-pattern>library/BaseKit/Validate/*.php</exclude-pattern>
        <exclude-pattern>library/BaseKit/View/Helper/TranslationInlineScript.php</exclude-pattern>
	<exclude-pattern>plugins/blog/src/BaseKit/BlogPlugin/Validate/Blog/CategoryExists.php</exclude-pattern>
	<exclude-pattern>plugins/blog/src/BaseKit/BlogPlugin/Validate/Blog/UniqueCategory.php</exclude-pattern>
    </rule>
</ruleset>
